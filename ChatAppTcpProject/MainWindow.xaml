<Window x:Class="ChatAppTcpProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TCP Chat Client" Height="400" Width="500"
        Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0 0 0 8">
            <TextBlock Text="Server:" VerticalAlignment="Center" Margin="0 0 4 0"/>
            <TextBox x:Name="ServerHostTextBox" Width="140" Text="127.0.0.1" Margin="0 0 8 0"/>
            <TextBlock Text="Port:" VerticalAlignment="Center" Margin="0 0 4 0"/>
            <TextBox x:Name="ServerPortTextBox" Width="60" Text="8080" Margin="0 0 8 0"/>
            <Button x:Name="ConnectButton" Width="90" Content="Connect" Click="ConnectButton_Click"/>
            <TextBlock x:Name="StatusTextBlock" Margin="12 0 0 0" VerticalAlignment="Center" Foreground="Gray" Text="Disconnected"/>
        </StackPanel>

        <ListBox x:Name="ChatList" Grid.Row="1" />

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0 8 0 0">
            <TextBox x:Name="MessageInput" Width="360" KeyDown="MessageInput_KeyDown" />
            <Button x:Name="SendButton" Width="80" Content="Send" Margin="8 0 0 0" Click="SendButton_Click" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>
