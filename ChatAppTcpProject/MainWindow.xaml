<Window x:Class="ChatAppTcpProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TCP Chat Client" Height="450" Width="600"
        Loaded="Window_Loaded" Closing="Window_Closing"
        Background="{StaticResource BackgroundBrush}"
        Foreground="{StaticResource ForegroundBrush}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0 0 0 8" Grid.ColumnSpan="3">
            <TextBlock Text="Server:" VerticalAlignment="Center" Margin="0 0 4 0" Foreground="{StaticResource ForegroundBrush}"/>
            <TextBox x:Name="ServerHostTextBox" Width="100" Text="127.0.0.1" Margin="0 0 8 0" 
                     Style="{StaticResource ModernTextBoxStyle}"/>
            <TextBlock Text="Port:" VerticalAlignment="Center" Margin="0 0 4 0" Foreground="{StaticResource ForegroundBrush}"/>
            <TextBox x:Name="ServerPortTextBox" Width="50" Text="8080" Margin="0 0 8 0" 
                     Style="{StaticResource ModernTextBoxStyle}"/>
            <TextBlock Text="Nickname:" VerticalAlignment="Center" Margin="0 0 4 0" Foreground="{StaticResource ForegroundBrush}"/>
            <TextBox x:Name="NicknameTextBox" Width="80" Margin="0 0 8 0" ToolTip="Enter your chat nickname"
                     Style="{StaticResource ModernTextBoxStyle}"/>
            <Button x:Name="ConnectButton" Width="80" Content="Connect" Click="ConnectButton_Click"
                    Style="{StaticResource ModernButtonStyle}"/>
            <Button x:Name="ReconnectButton" Width="80" Margin="4 0 0 0" Content="Reconnect" Click="ReconnectButton_Click" 
                    IsEnabled="False" Style="{StaticResource ModernButtonStyle}"/>
            <Button x:Name="ThemeToggleButton" Width="60" Margin="8 0 0 0" Content="🌙" Click="ThemeToggleButton_Click"
                    Style="{StaticResource ModernButtonStyle}" ToolTip="Toggle Dark/Light Theme"/>
            <TextBlock x:Name="StatusTextBlock" Margin="12 0 0 0" VerticalAlignment="Center" 
                       Foreground="{StaticResource StatusDisconnectedBrush}" Text="Disconnected"/>
        </StackPanel>

        <ListBox x:Name="ChatList" Grid.Row="1" Grid.Column="0" 
                 Style="{StaticResource ModernListBoxStyle}"/>
        
        <GridSplitter Grid.Row="1" Grid.Column="1" Width="5" HorizontalAlignment="Stretch" 
                     VerticalAlignment="Stretch" Background="{StaticResource BorderBrush}" ResizeBehavior="PreviousAndNext"/>
        
        <Border Grid.Row="1" Grid.Column="2" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" 
                Background="{StaticResource UserListBackgroundBrush}" Margin="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="Online Users" FontWeight="Bold" 
                          Margin="8,5,8,5" HorizontalAlignment="Center"
                          Foreground="{StaticResource ForegroundBrush}"/>
                
                <ListBox x:Name="UsersList" Grid.Row="1" Margin="5" 
                        BorderThickness="0" Background="Transparent"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="2">
                                <Ellipse Width="8" Height="8" Fill="{StaticResource StatusConnectedBrush}" 
                                        VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding}" VerticalAlignment="Center" 
                                          FontSize="11" Foreground="{StaticResource ForegroundBrush}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" Margin="0 8 0 0">
            <TextBox x:Name="MessageInput" Width="320" KeyDown="MessageInput_KeyDown" 
                     Style="{StaticResource ModernTextBoxStyle}" 
                     ToolTip="Type your message here. Use /w username message for private chat."/>
            <Button x:Name="SendButton" Width="80" Content="Send" Margin="8 0 0 0" Click="SendButton_Click" 
                    IsEnabled="False" Style="{StaticResource ModernButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
