<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <!-- Exclude UserInterfaceUpdates.xaml from compilation as it's a documentation/snippet file -->
    <Page Remove="UserInterfaceUpdates.xaml" />
    <None Include="UserInterfaceUpdates.xaml" />
    
    <!-- Exclude test files from main application project -->
    <Compile Remove="PrivateMessageParserTests.cs" />
    <None Include="PrivateMessageParserTests.cs" />
  </ItemGroup>

</Project>
