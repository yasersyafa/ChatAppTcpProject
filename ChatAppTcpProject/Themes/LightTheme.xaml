<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Modern Light Theme Colors -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#FAFBFC"/>
    <SolidColorBrush x:Key="ForegroundBrush" Color="#24292F"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#D0D7DE"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#2DA44E"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#2C974B"/>
    <SolidColorBrush x:Key="AccentPressedBrush" Color="#298E46"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#F6F8FA"/>
    <SolidColorBrush x:Key="ChatBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="UserListBackgroundBrush" Color="#F6F8FA"/>
    <SolidColorBrush x:Key="SystemMessageBrush" Color="#656D76"/>
    <SolidColorBrush x:Key="UserMessageBrush" Color="#24292F"/>
    <SolidColorBrush x:Key="PrivateMessageBrush" Color="#8250DF"/>
    <SolidColorBrush x:Key="MyMessageBrush" Color="#0969DA"/>
    <SolidColorBrush x:Key="StatusConnectedBrush" Color="#1A7F37"/>
    <SolidColorBrush x:Key="StatusDisconnectedBrush" Color="#656D76"/>
    <SolidColorBrush x:Key="StatusConnectingBrush" Color="#BF8700"/>
    <SolidColorBrush x:Key="StatusFailedBrush" Color="#CF222E"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="HoverBackgroundBrush" Color="#F3F4F6"/>
    
    <!-- Gradients -->
    <LinearGradientBrush x:Key="HeaderGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#F6F8FA" Offset="0"/>
        <GradientStop Color="#FFFFFF" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="ButtonGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#2DA44E" Offset="0"/>
        <GradientStop Color="#2C974B" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Enhanced Button Styles -->
    <Style x:Key="ModernButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource ButtonGradientBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#1B1F2426"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6" 
                            Padding="{TemplateBinding Padding}">
                        <Border.Effect>
                            <DropShadowEffect Color="#00000020" BlurRadius="3" ShadowDepth="1" Opacity="0.1"/>
                        </Border.Effect>
                        <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource AccentHoverBrush}"/>
                            <Setter Property="BorderBrush" Value="#1B1F2433"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="{StaticResource AccentPressedBrush}"/>
                            <Setter Property="BorderBrush" Value="#1B1F2440"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background" Value="#D0D7DE"/>
                            <Setter Property="Foreground" Value="#656D76"/>
                            <Setter Property="BorderBrush" Value="#D0D7DE"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Enhanced TextBox Styles -->
    <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6">
                        <Border.Effect>
                            <DropShadowEffect Color="#00000010" BlurRadius="2" ShadowDepth="1" Opacity="0.05"/>
                        </Border.Effect>
                        <ScrollViewer x:Name="PART_ContentHost" 
                                    Padding="{TemplateBinding Padding}"
                                    VerticalAlignment="Center"
                                    VerticalContentAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            <Setter Property="Background" Value="#FFFFFF"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="BorderBrush" Value="#0969DA"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Enhanced ListBox Styles -->
    <Style x:Key="ModernListBoxStyle" TargetType="ListBox">
        <Setter Property="Background" Value="{StaticResource ChatBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBox">
                    <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                        <Border.Effect>
                            <DropShadowEffect Color="#00000010" BlurRadius="4" ShadowDepth="1" Opacity="0.08"/>
                        </Border.Effect>
                        <ScrollViewer Padding="{TemplateBinding Padding}">
                            <ItemsPresenter/>
                        </ScrollViewer>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Chat Message Item Style -->
    <Style x:Key="ChatMessageItemStyle" TargetType="ListBoxItem">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Border Background="Transparent" 
                            CornerRadius="4" 
                            Margin="2" 
                            Padding="8,4">
                        <ContentPresenter/>
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource HoverBackgroundBrush}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- User List Item Style -->
    <Style x:Key="UserListItemStyle" TargetType="ListBoxItem">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Border Background="{StaticResource CardBackgroundBrush}" 
                            CornerRadius="6" 
                            Margin="4,2" 
                            Padding="12,8"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1">
                        <ContentPresenter/>
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource HoverBackgroundBrush}"/>
                                        <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>
