<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Modern Dark Theme Colors -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#0D1117"/>
    <SolidColorBrush x:Key="ForegroundBrush" Color="#F0F6FC"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#30363D"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#238636"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#2EA043"/>
    <SolidColorBrush x:Key="AccentPressedBrush" Color="#1A7F37"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#161B22"/>
    <SolidColorBrush x:Key="ChatBackgroundBrush" Color="#0D1117"/>
    <SolidColorBrush x:Key="UserListBackgroundBrush" Color="#161B22"/>
    <SolidColorBrush x:Key="SystemMessageBrush" Color="#7D8590"/>
    <SolidColorBrush x:Key="UserMessageBrush" Color="#F0F6FC"/>
    <SolidColorBrush x:Key="PrivateMessageBrush" Color="#DA7BE7"/>
    <SolidColorBrush x:Key="MyMessageBrush" Color="#58A6FF"/>
    <SolidColorBrush x:Key="StatusConnectedBrush" Color="#3FB950"/>
    <SolidColorBrush x:Key="StatusDisconnectedBrush" Color="#7D8590"/>
    <SolidColorBrush x:Key="StatusConnectingBrush" Color="#D29922"/>
    <SolidColorBrush x:Key="StatusFailedBrush" Color="#F85149"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#21262D"/>
    <SolidColorBrush x:Key="HoverBackgroundBrush" Color="#30363D"/>
    
    <!-- Gradients -->
    <LinearGradientBrush x:Key="HeaderGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#161B22" Offset="0"/>
        <GradientStop Color="#21262D" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="ButtonGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#2EA043" Offset="0"/>
        <GradientStop Color="#238636" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Enhanced Button Styles -->
    <Style x:Key="ModernButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource ButtonGradientBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#30363D"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6" 
                            Padding="{TemplateBinding Padding}">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="4" ShadowDepth="2" Opacity="0.3"/>
                        </Border.Effect>
                        <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource AccentHoverBrush}"/>
                            <Setter Property="BorderBrush" Value="#238636"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="{StaticResource AccentPressedBrush}"/>
                            <Setter Property="BorderBrush" Value="#1A7F37"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background" Value="#30363D"/>
                            <Setter Property="Foreground" Value="#7D8590"/>
                            <Setter Property="BorderBrush" Value="#21262D"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Enhanced TextBox Styles -->
    <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource SecondaryBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="2" ShadowDepth="1" Opacity="0.2"/>
                        </Border.Effect>
                        <ScrollViewer x:Name="PART_ContentHost" 
                                    Padding="{TemplateBinding Padding}"
                                    VerticalAlignment="Center"
                                    VerticalContentAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            <Setter Property="Background" Value="#21262D"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="BorderBrush" Value="#58A6FF"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Enhanced ListBox Styles -->
    <Style x:Key="ModernListBoxStyle" TargetType="ListBox">
        <Setter Property="Background" Value="{StaticResource ChatBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBox">
                    <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="3" ShadowDepth="1" Opacity="0.3"/>
                        </Border.Effect>
                        <ScrollViewer Padding="{TemplateBinding Padding}">
                            <ItemsPresenter/>
                        </ScrollViewer>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- Chat Message Item Style -->
    <Style x:Key="ChatMessageItemStyle" TargetType="ListBoxItem">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Border Background="Transparent" 
                            CornerRadius="4" 
                            Margin="2" 
                            Padding="8,4">
                        <ContentPresenter/>
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource HoverBackgroundBrush}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- User List Item Style -->
    <Style x:Key="UserListItemStyle" TargetType="ListBoxItem">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Border Background="{StaticResource CardBackgroundBrush}" 
                            CornerRadius="6" 
                            Margin="4,2" 
                            Padding="12,8"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1">
                        <ContentPresenter/>
                        <Border.Style>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource HoverBackgroundBrush}"/>
                                        <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>
